<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround"
    tools:context=".MainActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profilePic"
        android:layout_width="140dp"
        android:layout_height="128dp"
        android:layout_marginTop="32dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/guidelineR"
        app:layout_constraintStart_toStartOf="@+id/guidelineL"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_profile_picture" />
    <!--        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"-->
    <!--        app:strokeColor="@color/black"-->
    <!--        app:strokeWidth="1dp"-->

    <TextView
        android:id="@+id/myLibrarytxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/lemon"
        android:text="My Library"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#8C8B8B"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/guidelineR"
        app:layout_constraintStart_toStartOf="@+id/guidelineL"
        app:layout_constraintTop_toBottomOf="@+id/profilePic" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/seeAllBooksBttn"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="60dp"
        android:text="See all books"
        android:textAllCaps="false"
        app:backgroundTint="@color/ButtonBackground"
        app:layout_constraintEnd_toStartOf="@+id/guidelineR"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineL"
        app:layout_constraintTop_toBottomOf="@+id/myLibrarytxt" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/currentlyReadingBttn"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="22dp"
        android:text="Currently reaading"
        android:textAllCaps="false"
        app:backgroundTint="@color/ButtonBackground"
        app:layout_constraintEnd_toStartOf="@+id/guidelineR"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineL"
        app:layout_constraintTop_toBottomOf="@+id/seeAllBooksBttn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/alReadyReadBttn"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="22dp"
        android:text="Already read"
        android:textAllCaps="false"
        app:backgroundTint="@color/ButtonBackground"
        app:layout_constraintEnd_toStartOf="@+id/guidelineR"
        app:layout_constraintStart_toStartOf="@+id/guidelineL"
        app:layout_constraintTop_toBottomOf="@+id/currentlyReadingBttn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/myWishlistBttn"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="22dp"
        android:text="My Wishlist"
        android:textAllCaps="false"
        app:backgroundTint="@color/ButtonBackground"
        app:layout_constraintEnd_toStartOf="@+id/guidelineR"
        app:layout_constraintStart_toStartOf="@+id/guidelineL"
        app:layout_constraintTop_toBottomOf="@+id/alReadyReadBttn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/myFavoritesBttn"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="22dp"
        android:text="My Favorites"
        android:textAllCaps="false"
        app:backgroundTint="@color/ButtonBackground"
        app:layout_constraintEnd_toStartOf="@+id/guidelineR"
        app:layout_constraintStart_toStartOf="@+id/guidelineL"
        app:layout_constraintTop_toBottomOf="@+id/myWishlistBttn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/aboutBttn"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="22dp"
        android:text="ABOUT"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:backgroundTint="@color/ButtonBackground"
        app:layout_constraintEnd_toStartOf="@+id/guidelineR"
        app:layout_constraintStart_toStartOf="@+id/guidelineL"
        app:layout_constraintTop_toBottomOf="@+id/myFavoritesBttn" />

    <TextView
        android:id="@+id/developedByTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Developed by Shai at Excalibur.com"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>
